---
layout: main.liquid
tags: solutions
class: solutions
solutions-now: true
---

<section class="hero">
  <article>
    <div class="text">
      <h4>{{ tags }}</h4>
      <h1>{{ title }}</h1>
      <p>Please change this template.</p>
    </div>
    <a href="#request-demo" class="button cta">Request for Demo
      <i class="arrow"></i>
    </a>
  </article>
</section>

{{ content }}

<section class="blue request-demo" id="request-demo">
  <article>
    <div>
      <div class="text">
        <h3>Request for Demo</h3>
        {% if demo-message %}
          <p>{{ demo-message }}</p>
        {% else %}
          <p>To ask for quotation or schedule for a conversation with our {{ title-strong }} experts, please share your email, and we'll contact you back.</p>
        {% endif %}
      </div>

      <form action="{{ page.url }}">
        <input type="email" placeholder="Type your email" />
        <a class="button cta small">
          <button type="submit">Send</button>
        </a>
      </form>
    </div>
  </article>
</section>