{% comment %} Menu and buttons translation {% endcomment %}
{% if page.lang == "id" %}
  {% assign menu = menu.id %}
  {% assign buttons = buttons.id %}
{% else %}
  {% assign menu = menu.en %}
  {% assign buttons = buttons.en %}
{% endif %}

<section class="hero image no-shadow">
  <article>
    <div class="text">
      <h4>{{ menu.solutions }}</h4>
      <h1>{{ title }}</h1>
      <p>{{ description-hero }}</p>
    </div>
    <a href="#request-demo" class="button cta">{{ buttons.request_consultation }}
      <i class="arrow"></i>
    </a>
  </article>
  <div class="img clip">
    <img
      src="{{ img }}"
      width="1440"
      height=""
      alt="{{ alt }}" />
  </div>
</section>

