      <label for="email">Email</label>
      <input
        id="email"
        name="email"
        type="email"
        minlength="6"
        placeholder="Type your email" />
      <a class="button cta small">
        <button type="submit">Request</button>
      </a>
    </div>

    <div class="dots"></div>
  </form>
