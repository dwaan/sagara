<section class="checkbox closest">
  <form action="{{ page.url }}" method="post">
    <article id="products" class="selection checkbox">
      <h2 hidden>Products</h2>
      <div class="scroll">
        <ol class="flat">
          {% render 'item-checkbox' items: collections.types %}
        </ol>
      </div>
    </article>

    <div class="combined border">
      <label for="email">Email</label>
      <input
        id="email"
        name="email"
        type="email"
        minlength="6"
        placeholder="Type your email" />
      <a class="button cta small">
        <button type="submit">Request</button>
      </a>
    </div>

    <div class="dots"></div>
  </form>
